<%= form_for ["admin", @company_admin], :html => { :class => 'form-horizontal' } do |f| %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= collection_select :company_admin, :company_id, @companies, :id, :name, {:include_blank => "Please select"}, {class: "input-xlarge"} %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :username, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :username, :class => 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :first_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :first_name, :class => 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :last_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_name, :class => 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.password_field :password, :class => 'input-xlarge' %>
        <% if @company_admin.errors[:password].any? %>
            <span class="text-error text-message"><%= @company_admin.errors[:password].first %></span>
        <% end %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'input-xlarge' %>
        <% if @company_admin.errors[:password_confirmation].any? %>
            <span class="text-error text-message"><%= @company_admin.errors[:password_confirmation].first %></span>
        <% end %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :phone, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, :class => 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :mobile, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :mobile, :class => 'input-xlarge' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :fax, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :fax, :class => 'input-xlarge' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>

<% end %>

