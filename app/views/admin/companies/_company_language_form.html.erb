<%= form_for :company_language , url: admin_update_language_path(@company), :html => { :class => 'form-horizontal' } do |f| %>

    <div class="control-group">
      <%= f.label :company_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.label @company.name, :class => 'control-label' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label 'Language', :class => 'control-label' %>
      <div class="controls">
      <%company_languages = @company.company_languages.pluck(:id)%>
      <%@languages.each do |language|%>
            <%= language.name %>
            <%= check_box_tag("company_language[]",language.id,  is_selected_company_language?(@company,language)) %>
      <%end%>
      </div>

    </div>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>

<% end %>

