<%= form_for ["admin", @payment_type], :html => { :class => 'form-horizontal' } do |f| %>
        
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= collection_select :payment_type, :company_id, @companies, :id, :name, {:include_blank => "Select Company"}, {class: "input-xlarge"} %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :payment_method, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :payment_method, :class => 'input-xlarge' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :payment_class, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :payment_class, :class => 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :payment_receiver, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :payment_receiver, :class => 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :client_number, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :client_number, :class => 'input-xlarge' %>
      </div>
    </div>
   
    <div class="control-group">
      <%= f.label :payment_type, :class => 'control-label' %>
      <div class="controls">
        <%= check_box_tag 'payment_type[exact_charge]', @payment_type.exact_charge.present? ? 1 : 0, @payment_type.exact_charge %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :is_case, :class => 'control-label' %>
      <div class="controls">
        <%= radio_button_tag 'payment_type[is_case]', 1, @payment_type.is_case %>Yes &nbsp; <%= radio_button_tag 'payment_type[is_case]', 0, !@payment_type.is_case %>No
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_payment_types_path, :class => 'btn' %>
    </div>

<% end %>

